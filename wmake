#!/bin/bash
#!/usr/bin/env bash

export COSA_DIR=./platform/cosa

set -o nounset
set -o errexit

trap 'echo "Aborting due to errexit on line $LINENO. Exit code: $?" >&2' ERR

set -o errtrace
set -o pipefail

DEFAULT_IFS="${IFS}"
SAFER_IFS=$'\n\t'
IFS="${SAFER_IFS}"

_ME=$(basename "${0}")

_print_help() {
  cat <<HEREDOC
                 __               .__
__  _  _______ _/  |_  ___________|  |   ____   ____ ______
\ \/ \/ /\__  \\   __\/ __ \_  __ \  |  /  _ \ /  _ \\____ \
 \     /  / __ \|  | \  ___/|  | \/  |_(  <_> |  <_> )  |_> >
  \/\_/  (____  /__|  \___  >__|  |____/\____/ \____/|   __/
              \/          \/                         |__|
The Embedded C++ code base builder
Usage:
  ${_ME} [--help] [build] [coverage] [clean] [reset] [run] [test]
  ${_ME} -h | --help
Options:
  -h --help          Show this screen.
HEREDOC
}

_simple() {
    root_dir=$(cd -P -- "$(dirname -- "$0")" && pwd -P)
    root_dir_name=$(basename "$root_dir")
    cd "$root_dir"

    if [ "$1" == 'build' ] ; then
        
    else
        _print_help
    fi
}

_main() {
    if [[ "${1:-}" =~ ^-h|--help$  ]] || [ $# -lt "1" ]
    then
        _print_help
    else
        _simple "$@"
    fi
}

_main "$@"

